{
  "fixed-center": true,
  "margin": "5 18 0 18", // "gaps_in gaps_out-border" fr hyprland.conf
  "reload_style_on_change": true,
  "modules-left": [
    "hyprland/workspaces",
    "group/hyprland"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [ 
    "keyboard-state", 
    "group/settings",
    "custom/launcher"
  ],
  "group/hyprland": {
    "drawer": {
      "click-to-reveal": true,
      "transition-left-to-right": true
    },
    "modules": [
      "custom/right",
      "hyprland/language",
      "hyprland/submap"
    ],
    "orientation": "inherit",
  },
  "group/settings": {
    "drawer": {
      "click-to-reveal": true,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/left",
      "tray",
      "cpu",
      "memory",
      "temperature",
      "wireplumber#sink",
      "wireplumber#source",
      "idle_inhibitor"
    ],
    "orientation": "inherit",
  },
  
  // Modules definitions
  "clock": {
    "actions": {
      "on-click-backward": "shift_up",
      "on-click-forward": "shift_down",
      "on-click-middle": "shift_reset",
      "on-click-right": "mode",
      "on-scroll-down": "tz_up",
      "on-scroll-up": "tz_down"
    },
    "calendar": {
      "format": {
        "days": "{}",
        "months": "{}",
        "today": "<span color='#ff6699'>{}</span>",
        "weekdays": "<span color='#ffcc66'>{}</span>",
        "weeks": "<span color='#99ffdd'>{}:</span>"
      },
      "mode-mon-col": 3,
      "weeks-pos": "left",
    },
    "format": " {:%a, %b %d   %I:%M %p} ",
    "format-alt": " {:%A, %B %d, %Y   %I:%M %p (<small>%Z</small>)} ",
    "timezones": [
      "America/New_York",
      "America/Los_Angeles",
      "UTC"
    ],
    "tooltip-format": "<tt>{calendar}</tt>"
  },
  "cpu": {
    "format": " {usage}% <span face='Noto Sans Symbols 2' line_height='0.5' size='100%'>‚è≤</span> ",
    "format-alt": " {avg_frequency} GHz <span face='Noto Sans Symbols 2' line_height='0.5' size='100%'>‚è≤</span> ",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1"
  },
  "custom/launcher": {
    "format": " <span face='Noto Sans Symbols 2' line_height='0.5' size='100%'>üô¨</span> ", // ‚åò
    "menu": "on-click-right",
    "menu-file": "$HOME/.config/waybar/launcher_menu.xml",
    "menu-actions": {
      "calculator": "hyprctl dispatch exec gnome-calculator",
      "fileManager": "hyprctl dispatch exec 'nautilus -w'",
      "terminal": "hyprctl dispatch exec kitty",
      "textEditor": "hyprctl dispatch exec 'gnome-text-editor -n'",
      "webBrowser": "hyprctl dispatch exec firefox",
      "logout": "hyprctl dispatch exit",
      "reboot": "systemctl reboot",
      "shutdown": "systemctl poweroff",
      "suspend": "systemctl suspend"
    },
    "on-click": "hyprctl dispatch exec 'rofi -show combi -modes combi -combi-modes window,drun,run'",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "tooltip-format": "Launch"
  },
  "custom/left": {
    "format": "<span size='100%'>‚ùÆ‚ùÆ</span>",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "tooltip-format": "More"
  },
  "custom/right": {
    "format": "<span size='100%'>‚ùØ‚ùØ</span>",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "tooltip-format": "More"
  },
  "hyprland/workspaces": {
    /*"format": "{icon}",
    "format-icons": {
      "special": "S",
    },*/
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "show-special": true
  },
  "hyprland/submap": {
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1"
  },
  "hyprland/language": {
    "format": " <span face='Noto Sans Symbols 2' line_height='0.5' size='100%'>‚å®</span> {} ",
    "on-scroll-down": "hyprctl switchxkblayout current next",
    "on-scroll-up": "hyprctl switchxkblayout current prev"
  },
  "idle_inhibitor": {
    "format": " {icon} ",
    "format-icons": {
      "activated": "<span face='Noto Sans Symbols 2' line_height='0.75' size='100%'>‚òÄ</span>",
      "deactivated": "<span face='Noto Sans Symbols 2' line_height='0.25' size='100%'>‚èæ</span>"
    },
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1"
  },
  "keyboard-state": {
    "capslock": true,
    "format": " <span face='Noto Sans Symbols' line_height='0.5' size='100%'>{icon}</span> ",
    "format-icons": {
      "locked": "üÑ∞",
      "unlocked": " "
    },
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "on-scroll-up": "hyprctl dispatch workspace -1"
  },
  "memory": {
    "format": " {percentage}% <span line_height='0.5' size='100%'>‚¨í</span> ",
    "format-alt": " {swapPercentage}% ‚áÑ ",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "tooltip-format": "{used:0.1f} GiB RAM\n{swapUsed} GiB Swap"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": " {temperatureC} ¬∞C ",
    "format-alt": " {temperatureF} ¬∞F ",
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "tooltip-format": "{temperatureC} ¬∞C\n{temperatureF} ¬∞F"
  },
  "tray": {
    "on-scroll-down": "",
    "on-scroll-up": "",
    "spacing": 16
  },
  "wireplumber#sink": {
    "format": " {volume}% <span face='Noto Sans Symbols 2' line_height='0.5' size='100%'>{icon}</span> ",
    "format-muted": " <span face='Noto Sans Symbols 2' line_height='0.5' size='100%'>√óüï®</span> ",
    "format-icons": ["üï®","üï©","üï™"],
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "helvum",
  },
  "wireplumber#source": {
    "format": " {volume}% {icon} ",
    "format-muted": " <span face='Noto Sans Symbols 2' line_height='0.5' size='85%'>À£</span>{icon} ",
    "format-icons": ["<span face='Noto Sans Symbols 2' line_height='0.5' size='85%'>üéô</span>"],
    "node-type": "Audio/Source",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-click-right": "helvum",
  }
}
